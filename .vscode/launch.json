{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "API tests debugger",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/node_modules/.bin/cucumber-js",
            "args": [
                "${workspaceFolder}/features/*.feature",
                "--require",
                "${workspaceFolder}/step-definitions/",
                "--env",
                "qa"
            ]
        },
    ]
}